<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.potato.hot.hatly.ViewCommentsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/post_comment_button"
        android:layout_alignEnd="@+id/post_comment_button">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:id="@+id/view4"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageButton2"
            android:layout_alignStart="@+id/imageButton2" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:id="@+id/view5"
            android:layout_above="@+id/post_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/post_comment"
            android:layout_width="286dp"
            android:layout_height="50dp"
            android:text="@string/comment_text"
            android:layout_gravity="center"
            android:visibility="visible"
            android:background="#ffffff"
            android:editable="false"
            android:elegantTextHeight="false"
            android:singleLine="false"
            android:capitalize="sentences"
            android:layout_above="@+id/view4"
            android:layout_toRightOf="@+id/space4"
            android:layout_toEndOf="@+id/space4" />

        <Space
            android:layout_width="30px"
            android:layout_height="20px"
            android:id="@+id/space4"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:layout_toEndOf="@+id/imageButton2" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="start|top"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/space3"
            android:layout_toEndOf="@+id/space3" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/space3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView7"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignLeft="@+id/post_comment"
            android:layout_alignStart="@+id/post_comment" />
    </RelativeLayout>

</FrameLayout>
